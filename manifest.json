{
    "manifest_version": 3,
    "name": "UI Tests Coverage",
    "version": "0.0.4",
    "description": "Highlight elements used during UI tests",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ],
    "options_page": "options.html",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/favicon-16x16.png",
            "48": "icons/android-icon-48x48.png",
            "128": "icons/apple-icon-120x120.png"
        }
    },
    "icons": {
        "16": "icons/favicon-16x16.png",
        "48": "icons/android-icon-48x48.png",
        "128": "icons/apple-icon-120x120.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "popup.js",
                "sidebar.js"
            ],
            "run_at": "document_end"
        }
    ],
    "options_ui": {
        "page": "options.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "sidebar.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}
